<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="7dp"
    android:background="@drawable/restaurantimg"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_span="2"
        android:background="#00ACC1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Restaurant Information"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ddfef8f8"
        android:layout_weight="0.59">

        <TableRow
            android:layout_marginTop="20dp"
            android:padding="3dp">

            <TextView android:layout_width="wrap_content"
                android:id="@+id/txtname"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_weight="1"
                android:gravity="center"
                android:text="name"
                android:textSize="18dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:padding="3dp">

            <ImageView
                android:id="@+id/imgno"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/chicken" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvmenu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="3dp"
                    android:text="MENU1" />

                <TextView
                    android:id="@+id/tvmenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="3dp"
                    android:text="MENU2" />

                <TextView
                    android:id="@+id/tvmenu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="3dp"
                    android:text="MENU3" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PHONE:"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:padding="3dp"
                android:text="phone number"
                android:textColor="#ff0000" />

            <ImageView
                android:id="@+id/imgCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/sym_def_app_icon" />
        </TableRow>

        <TableRow android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HOMEPAGE:"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:padding="3dp"
                android:text="homepage"
                android:textColor="#00ACC1" />

            <ImageView
                android:id="@+id/imgURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/btn_star_big_on" />
        </TableRow>

        <TableRow android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="DATE:" />

            <TextView
                android:id="@+id/tvRegdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:paddingLeft="20dp"
                android:text="Date" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Back" />
    </LinearLayout>

</LinearLayout>